<project>
	<property name="lib.dir" value="F:/lib"/>
	<property name="bin.dir" value="bin/"/>
		
	<path id="classpath">
		<fileset dir="${lib.dir}" includes="**/*.jar"/>
	</path>
	
    <target name="clean">
        <delete dir="${bin.dir}"/>
    </target>

    <target name="compile">
        <mkdir dir="${bin.dir}"/>
        <javac srcdir="src" destdir="${bin.dir}" classpathref="classpath"/>
		<copy todir="${bin.dir}">
			<fileset dir="." includes="*.yml"/>
		</copy>
    </target>

    <target name="jar" depends="compile">
		<echo message="Outputting to ${project_name}.jar"/>
        <mkdir dir="${bin.dir}"/>
        <jar destfile="F:/lib/${project_name}.jar" basedir="${bin.dir}">
            <manifest>
                <attribute name="Main-Class" value="oata.${project_name}"/>
            </manifest>
        </jar>
		<antcall target="clean"/>
    </target>
</project>